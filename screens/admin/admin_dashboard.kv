<TopDashboardAdmin@BoxLayout>:
    menu_click: lambda: None
    signout_click: lambda: None
    orientation: "horizontal"
    size_hint_y: None
    height: Window.height * 0.05
	spacing: Window.width * 0.05

	ClickableImage:
		size_hint_x: 0.2
		source: "assets/logo.png"
        on_release: root.manager.go_to_login()
        fit_mode: "fill"
	Widget:
		size_hint_x: 0.4
	
	CustomButton:
		size_hint_x: 0.3
		text: "Sign out"
        default_color: 0.8, 0.2, 0.3, 1
        pressed_color: 0.6, 0.1, 0.2, 1
		on_release: root.signout_click()

<TopDesignAdmin@MainStackLayout>:
    menu_click: lambda: None
    signout_click: lambda: None
    TopDashboardAdmin:
        menu_click: root.menu_click
        signout_click: root.signout_click

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: Window.height * 0.1
        padding: [dp(10), dp(10)]
        spacing: dp(10)
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [dp(10), dp(10), dp(10), dp(10)]
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Line:
                rounded_rectangle: self.x, self.y, self.width, self.height, dp(10), dp(10), dp(10), dp(10) 
        Widget:
            size_hint_x: None
            height: dp(50)
            width: dp(50)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    source: "assets/JDMBG.png"
                    pos: self.pos
                    size: self.size
        
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.7
            HeaderLabel:
                text: "ID: 923452346"
                size_hint_y: 0.3
                font_size: sp(16)
                bold: False
            
            HeaderLabel:
                text: "NONE"
                size_hint_y: 0.3
                font_size: sp(16)
                bold: False

            HeaderLabel:
                text: "POSITION: ADMIN"
                size_hint_y: 0.3
                font_size: sp(16)
                bold: False




