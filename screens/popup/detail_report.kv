
<DetailReportPopup>:
    title: ""
    separator_height: 0
    size_hint: 0.8, 0.52
    auto_dismiss: False

    background_color: 1, 1, 1, 1
    background: ""

    canvas.before:
        Color:
            rgba: 0.9, 0.8,1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(5)

        Label:
            text: "Project Detail"
            color: 0.3, 0.3, 0.3, 1
            text_size: self.width, None
            halign: 'center'
            valign: 'center'
            font_size: sp(16)
            bold: True
        SpaceWidget:
            height: Window.height * 0.01

        LabelLabel:
            size_hint_y: None
            height: Window.height * 0.05
            text: "Project Name"
            text2: root.project['projectName']
            label1_size_hint: (0.4, 1)
            label2_size_hint: (0.6, 1)
        
        LabelLabel:
            size_hint_y: None
            height: Window.height * 0.05
            text: "Location"
            text2: root.project['projectLocation']
            label1_size_hint: (0.4, 1)
            label2_size_hint: (0.6, 1)
        
        LabelLabel:
            size_hint_y: None
            height: Window.height * 0.05
            text: "Type"
            text2: root.project['projectType']
            label1_size_hint: (0.4, 1)
            label2_size_hint: (0.6, 1)
        
        LabelLabel:
            size_hint_y: None
            height: Window.height * 0.05
            text: "Start Date"
            text2: root.project['startDate']
            label1_size_hint: (0.4, 1)
            label2_size_hint: (0.6, 1)
        
        LabelLabel:
            size_hint_y: None
            height: Window.height * 0.05
            text: "End Date"
            text2: root.project['endDate']
            label1_size_hint: (0.4, 1)
            label2_size_hint: (0.6, 1)

        CustomTextInput:
            text: root.project['projectDescription']
            size_hint_y: None
            height: Window.height * 0.1
            multiline: False
            readonly: True

        CustomButton:
            text: "Close"
            size_hint_y: None
            height: Window.height * 0.04
            default_color: 0.8, 0.2, 0.3, 1
            pressed_color: 0.6, 0.1, 0.2, 1
            on_release: root.dismiss()