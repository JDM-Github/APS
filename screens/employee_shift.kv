<HeaderTableLabel@Label>:
    size_hint_y: None
    height: dp(30)
    font_size: sp(12)
    bold: True
    canvas.before:
        Color:
            rgba: 120/255,	200/255, 210/255, 1	
        Rectangle:
            size: self.size
            pos: self.pos
        
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height

<EvenLabel@Label>:
    size_hint_y: None
    height: dp(30)
    font_size: sp(12)
    color: 0.3, 0.3, 0.3, 1
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            size: self.size
            pos: self.pos
        
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height

