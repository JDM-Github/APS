<TableView@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    size_hint_y: None
    height: Window.height * 0.7

    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(10), dp(10), dp(10), dp(10)]
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            rounded_rectangle: self.x, self.y, self.width, self.height, dp(10), dp(10), dp(10), dp(10) 

    GridLayout:
        cols: 3
        size_hint_y: None
        height: self.minimum_height
        row_default_height: dp(30)
        row_force_default: True
        padding: [dp(10), dp(10)]
        spacing: dp(1)

        HeaderTableLabel:
            text: "Time"
        HeaderTableLabel:
            text: "Date"
        HeaderTableLabel:
            text: "Event"

        EvenLabel:
            text: "8:00AM"
        EvenLabel:
            text: "03/10/2024"
        EvenLabel:
            text: "Company Meeting"

        OddLabel:
            text: "9:00AM"
        OddLabel:
            text: "03/10/2024"
        OddLabel:
            text: "Client Call"


